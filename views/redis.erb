<nav class="nav">
  <ul class="nav-list">
    <li class="nav-item">
      <a class="pure-button" href="/postgres">Postgres</a>
    </li>
  </ul>
</nav>

<div class="content pure-u-1-2 pure-u-md-1-2">
  <div class="posts">
    <% posts.each do |post| %>
      <section class="post">
        <header class="post-header">
          <%= post.author %>
          <h1><%= post.title %></h1>
          <h3>
            Likes: <%= post.likes %>
            Views: <%= post.views %>
            Shares: <%= post.shares %>
          </h3>
          <%= post.abstract %>
        </header>
        <div class="post-description">
          <p><%= post.content %></p>
        </div>
      </section>
    <% end %>
  </div>
</div>
